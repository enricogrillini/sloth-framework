<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
 <Appenders>
  <RollingFile name="RollingFile" fileName="d:/framework.log" filePattern="d:/framework-%d{yyyy-MM-dd}-%i.log" ignoreExceptions="false">
   <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [intranet] %-5level %logger{36} - %msg%n" />
   <TimeBasedTriggeringPolicy interval="1" />
  </RollingFile>
 </Appenders>

 <Loggers>
  <Root level="info">
   <AppenderRef ref="RollingFile" />
  </Root>
 </Loggers>
</Configuration>